FROM node:10.10.0-alpine

MAINTAINER zzzzbw "zzzzbw@gmail.com"

RUN npm config set registry https://registry.npmjs.org/

ENV HOST 0.0.0.0
ENV NODE_ENV=production

WORKDIR /app

COPY ./fame-front/package.json ./
RUN npm install

COPY ./fame-front .

RUN npm run build

EXPOSE 3000

CMD ["npm","run","docker"]